rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /notion-credentials/{document} {
      allow create: if request.auth.uid == request.resource.data.ownerUserEmail;
      allow read: if request.auth.uid == resource.data.ownerUserEmail;
      allow write: if request.auth.uid == resource.data.ownerUserEmail;
      allow delete: if request.auth.uid == resource.data.ownerUserEmail;
    }
  }
}
